extends layout

block content
  .container(ng-controller="InformationPeopleController as infoCtrl")
    .row
      .col-md-8
        .panel.panel-primary(ng-repeat="")
          .panel-heading 王慕群
          .panel-body
            .media
              .media-left
                a(href="#")
                  img.media-object(src="http://placehold.it/128x128", alt="...")
              .media-body
                ul
                  li(ng-repeat="") abc
                  li
                    .input-group
                      input.form-control(type="text", placeholder="新增個人資料...")
                      span.input-group-btn
                        button.btn.btn-primary(type="button") Add
      .col-md-4
        .panel.panel-default
          .panel-heading
            .input-group
              input.form-control(type="text", placeholder="資訊人姓名", ng-model="infoCtrl.txtPeopleName")
          .panel-body
            .media
              .media-left
                a(href="#")
                  img.media-object(src="http://placehold.it/128x128", alt="...")
              .media-body
                ul
                  li(ng-repeat="") abc
                  li
                    .input-group
                      input.form-control(type="text", placeholder="新增個人資料...")
                      span.input-group-btn
                        button.btn.btn-default(type="button") Add
          .panel-footer
            .input-group
              input.form-control(type="button", value="新增", ng-model="infoCtrl.createPeople()")
